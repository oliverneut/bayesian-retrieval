#!/bin/sh
#SBATCH -o ./output/logs/%A.out
#SBATCH -e ./output/logs/%A.err
#SBATCH --partition=gpu
#SBATCH --gpus-per-node=1
#SBATCH --time=72:00:00
# Set-up the environment.
source ${HOME}/.bashrc
# Activate env.
conda activate bret

CUDA_VISIBLE_DEVICES=0 python src/bret/scripts/eval_retriever.py \
    --dataset_dir data/nq \
    --split test \
    --query_file data/nq-test.jsonl \
    --corpus_file data/nq-corpus.jsonl \
    --model_name bert-base \
    --encoder_ckpt output/trained_encoders/bert-base-vi.pt \
    --method vi \
    --max_qry_len 32 \
    --k 20 \
    --embeddings_dir output/embeddings \
    --run_dir output/runs \
    --output_dir output/results
